<script type="text/javascript">
var modal = document.getElementById("myModal");

// Get the button that opens the modal
var btn = document.getElementById("myBtn");

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks the button, open the modal 
function blockBtn() {
  document.getElementById("myModal").style.display = "block";
}

// When the user clicks on <span> (x), close the modal
function spanClose() {
  document.getElementById("myModal").style.display = "none";
}

// When the user clicks anywhere outside of the modal, close it
window.onclick = function(event) {
  if (event.target == modal) {
    document.getElementById("myModal").style.display = "none";
  }
}

function getParameter(){

var tohandle = getUrlParam('toHandle', 'null');
var toFile = getUrlParam('toFile', 'null');
document.getElementById("toThesisId").href=tohandle;
document.getElementById("toFileId").href=toFile;
document.getElementById("modalBtn").click();

}
function getUrlVars() {
    var vars = {};
    var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function(m,key,value) {
        vars[key] = value;
    });
    return vars;
}

function getUrlParam(parameter, defaultvalue){
    var urlparameter = defaultvalue;
    if(window.location.href.indexOf(parameter) > -1){
        urlparameter = getUrlVars()[parameter];
        }
    return urlparameter;
}


function redirectPage(redirectPage){
	if(redirectPage == 1){
		
		document.getElementById("toThesisId").click();
		document.getElementById("toFileId").click();
		
		
	}else{
		document.getElementById("toFileId").click();
	}
		
}
 
 
 var getLocation = function(href) {
    var l = document.createElement("a");
    l.href = href;
    return l;
};
</script>
